<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="150" prefWidth="250" alignment="CENTER" spacing="10" fx:controller="ewanstore.NameBoxController">
    <Label fx:id="label" text="%label" />
	<TextField fx:id="nameText" promptText="%nameText" maxWidth="200" onAction="#onChangeButtonClick" />
	<Button fx:id="changeButton" text="%changeButton" prefWidth="100" onAction="#onChangeButtonClick" />
	<Button fx:id="cancelButton" text="%cancelButton" prefWidth="100" onAction="#onCancelButtonClick" /> 
</VBox>
